<%= form_for @tour, url: @url do |f| %>
	<p>
		<%= f.label :Title %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label "Season Start" %>
		<%= f.date_select :season_start %>
	</p>

	<p>
		<%= f.label "Season End" %>
		<%= f.date_select :season_end %>
	</p>

	<p>
		<%= f.label "Description" %>
		<%= f.text_area :description %>
	</p>

	<p>
		<%= f.label "City" %>
		<%= f.select :city_id, options_for_select(City.all.collect {|p| [ p.title, p.id ] }) %>
	</p>

 <p>
    <%= f.submit %>
  </p>
<% end %>