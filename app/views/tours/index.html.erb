
<table class="table table-condensed">
	<tr>
		<th> Title </th>
		<th> Description </th> 
		<th>Contact Persons</th>
		<th> Maintain Tours </th>
	</tr>
	<%if !@tours.empty? %>
		<% @tours.each do |tour| %>
			<tr>
				<td> <%= tour.title %> </td>
				<td><%=tour.description %> </td>
				<td><%#=tour.contact_persons %></td>
				<td><%=link_to 'Edit', {action: 'edit', id: tour.id} %> | <%=link_to 'Delete', {action: 'destroy', id: tour.id} %></td>
			</tr>
		<% end %>
	<% end %>
</table>

<h2 align="center"> <%=link_to 'Add a Tour', {controller: 'tours', action: 'new'} %></h2>