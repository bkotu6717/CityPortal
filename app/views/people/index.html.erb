<div class="container">
  <div class="well">
    <%= link_to "New Person", new_person_path, remote: true, class: "btn btn-primary" %>
  </div>
  <div class="new-person"></div>
  
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Avatar</th>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    </thead>
    <tbody class="person-index">
      <%= render "index" %>
    </tbody>
  </table>
</div>
<div id="person-modal" class="modal hide fade"></div>