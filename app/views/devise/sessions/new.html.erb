<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
    <%= f.label :email, class: "form-signin-heading", for: "inputEmail", class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, id: 'inputEmail', class: 'form-control' %>

    <%= f.label :password, for: "inputPassword", class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "off" %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block", type: "submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
