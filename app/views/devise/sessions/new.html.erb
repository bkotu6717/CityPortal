<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info" >
    <div class="panel-heading">
      <div class="panel-title">Sign In</div>
    </div>

    <div style="padding-top:30px" class="panel-body" >

      <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),  class: "form-horizontal", id: 'loginform') do |f| %>

    <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.email_field :email, autofocus: true, id: 'inputEmail', class: 'form-control' %>
        </div>

     <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
           <%= f.password_field :password, autocomplete: "off", id: "login-password",
           class: 'form-control' %>
        </div>

    <div class="input-group">
      <div class="checkbox">
        <% if devise_mapping.rememberable? -%>
          <label>
            <%= f.check_box :remember_me, id: "login-remember" %>
            <%= f.label :remember_me %>
          </label>
        <% end %>
      </div>
    </div>

  <div style="margin-top:10px" class="form-group">
          <!-- Button -->
    <div class="col-sm-12 controls">
     <a> <%= f.submit "LogIn", class: "btn btn-success", id: "btn-login", type: "submit" %></a>

      <a id="btn-fblogin" href="#" class="btn btn-primary">Login with Facebook</a>

    </div>
  </div>
<% end %>

  <%= render "devise/shared/links" %>
    </div>
  </div>
</div>